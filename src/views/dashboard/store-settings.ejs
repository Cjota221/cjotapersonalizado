<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Configurações da Loja - <%= store.store_name %></title>
  <link rel="stylesheet" href="/css/nuvemshop-admin.css">
</head>
<body>
  <div class="admin-container">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <div class="sidebar-header">
        <a href="/dashboard" class="sidebar-logo">CJota Admin</a>
      </div>
      
      <nav class="sidebar-nav">
        <div class="nav-section">
          <div class="nav-section-title">Principal</div>
          <a href="/dashboard" class="nav-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="7" height="7"></rect>
              <rect x="14" y="3" width="7" height="7"></rect>
              <rect x="14" y="14" width="7" height="7"></rect>
              <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
            Dashboard
          </a>
          <a href="/admin/produtos" class="nav-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 3h18v18H3z"></path>
              <path d="M3 9h18"></path>
              <path d="M9 21V9"></path>
            </svg>
            Produtos
          </a>
          <a href="/dashboard/orders" class="nav-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 2L3 8v13h18V8l-6-6H9z"></path>
              <polyline points="9 8 9 2 15 2 15 8"></polyline>
            </svg>
            Pedidos
          </a>
        </div>
        
        <div class="nav-section">
          <div class="nav-section-title">Configurações</div>
          <a href="/dashboard/store-settings" class="nav-item active">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2v4m0 12v4m8-10h-4m-12 0H0m15.364 6.364l-2.828-2.828m-8.486 0L1.222 18.364M18.364 5.636l-2.828 2.828m-8.486 0L4.222 5.636"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
            Loja
          </a>
          <a href="/dashboard/branding" class="nav-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="3" width="20" height="14" rx="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
            Personalização
          </a>
        </div>
      </nav>
    </aside>
    
    <!-- Conteúdo Principal -->
    <main class="admin-main">
      <header class="admin-header">
        <h1 class="page-title">Configurações da Loja</h1>
      </header>
      
      <div class="admin-content">
        
        <div id="message" style="display: none; margin-bottom: 24px;"></div>
        
        <form id="settings-form" enctype="multipart/form-data">
          
          <!-- Logomarca -->
          <div class="card" style="margin-bottom: 24px;">
            <div class="card-header">
              <h2 class="card-title">Logomarca</h2>
            </div>
            <div class="card-body">
              
              <% if (store.logo_url) { %>
                <div style="margin-bottom: 24px;">
                  <label class="form-label">Logo Atual</label>
                  <div style="padding: 16px; background: #f8f9fa; border-radius: 8px; display: inline-block;">
                    <img src="<%= store.logo_url %>" alt="Logo atual" style="max-width: 200px; max-height: 100px; display: block;">
                  </div>
                </div>
              <% } %>
              
              <div class="form-group">
                <label for="logo" class="form-label">Enviar Nova Logomarca</label>
                <input type="file" id="logo" name="logo" accept="image/*" class="form-input">
                <div class="form-help">Formatos aceitos: JPG, PNG, GIF, WEBP (máx 5MB)</div>
              </div>
            </div>
          </div>
          
          <!-- Cores da Loja -->
          <div class="card" style="margin-bottom: 24px;">
            <div class="card-header">
              <h2 class="card-title">Cores da Loja</h2>
            </div>
            <div class="card-body">
              <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
                
                <div class="form-group">
                  <label for="primary" class="form-label">Cor Principal</label>
                  <input type="color" id="primary" name="primary" value="<%= store.colors?.primary || '#000000' %>" class="form-input">
                </div>
                
                <div class="form-group">
                  <label for="button" class="form-label">Cor dos Botões</label>
                  <input type="color" id="button" name="button" value="<%= store.colors?.button || '#007bff' %>" class="form-input">
                </div>
                
                <div class="form-group">
                  <label for="background" class="form-label">Cor de Fundo</label>
                  <input type="color" id="background" name="background" value="<%= store.colors?.background || '#ffffff' %>" class="form-input">
                </div>
                
                <div class="form-group">
                  <label for="secondary" class="form-label">Cor Secundária</label>
                  <input type="color" id="secondary" name="secondary" value="<%= store.colors?.secondary || '#6c757d' %>" class="form-input">
                </div>
                
              </div>
            </div>
          </div>
          
          <!-- Tema Visual -->
          <div class="card" style="margin-bottom: 24px;">
            <div class="card-header">
              <h2 class="card-title">Tema Visual</h2>
            </div>
            <div class="card-body">
              <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
                
                <div class="form-group">
                  <label for="card_border" class="form-label">Estilo dos Cards</label>
                  <select id="card_border" name="card_border" class="form-input">
                    <option value="rounded" <%= store.theme_settings?.card_border === 'rounded' ? 'selected' : '' %>>Arredondado</option>
                    <option value="square" <%= store.theme_settings?.card_border === 'square' ? 'selected' : '' %>>Quadrado</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label for="button_shape" class="form-label">Formato dos Botões</label>
                  <select id="button_shape" name="button_shape" class="form-input">
                    <option value="pill" <%= store.theme_settings?.button_shape === 'pill' ? 'selected' : '' %>>Pílula</option>
                    <option value="rounded" <%= store.theme_settings?.button_shape === 'rounded' ? 'selected' : '' %>>Arredondado</option>
                    <option value="square" <%= store.theme_settings?.button_shape === 'square' ? 'selected' : '' %>>Quadrado</option>
                  </select>
                </div>
                
              </div>
            </div>
          </div>
          
          <!-- Ações -->
          <div style="display: flex; gap: 12px; justify-content: flex-end;">
            <a href="/dashboard" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Salvar Configurações</button>
          </div>
          
        </form>
        
      </div>
    </main>
  </div>

  <script>
    document.getElementById('settings-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const messageDiv = document.getElementById('message');
      
      try {
        const response = await fetch('/dashboard/store-settings', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        messageDiv.style.display = 'block';
        
        if (result.success) {
          messageDiv.style.padding = '16px';
          messageDiv.style.borderRadius = '8px';
          messageDiv.style.background = '#e6f9f3';
          messageDiv.style.color = '#00c48c';
          messageDiv.style.border = '1px solid #00c48c';
          messageDiv.textContent = result.message;
          
          setTimeout(() => {
            window.location.href = '/dashboard';
          }, 1500);
        } else {
          messageDiv.style.padding = '16px';
          messageDiv.style.borderRadius = '8px';
          messageDiv.style.background = '#ffe6e6';
          messageDiv.style.color = '#ff4757';
          messageDiv.style.border = '1px solid #ff4757';
          messageDiv.textContent = result.error;
        }
      } catch (error) {
        console.error('Erro:', error);
        messageDiv.style.display = 'block';
        messageDiv.style.padding = '16px';
        messageDiv.style.borderRadius = '8px';
        messageDiv.style.background = '#ffe6e6';
        messageDiv.style.color = '#ff4757';
        messageDiv.style.border = '1px solid #ff4757';
        messageDiv.textContent = 'Erro ao salvar configurações';
      }
    });
  </script>
</body>
</html>
