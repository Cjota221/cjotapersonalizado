<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Configurações Padrão - <%= store.name %></title>
  <link rel="stylesheet" href="/css/nuvemshop-admin.css">
</head>
<body>
  <div class="admin-container">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <div class="admin-sidebar-header">
        <h2><%= store.name %></h2>
      </div>
      <nav class="admin-sidebar-nav">
        <a href="/dashboard" class="nav-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
          <span>Dashboard</span>
        </a>
        <a href="/dashboard/produtos" class="nav-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 7h-4v14h4V7zM12 3h-2v18h2V3zM4 11H2v10h2V11z"/>
          </svg>
          <span>Produtos</span>
        </a>
        <a href="/dashboard/cadastro-massa" class="nav-item active">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          <span>Cadastro em Massa</span>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
      <div class="admin-header">
        <div>
          <h1>Configurações Padrão</h1>
          <p>Defina valores que serão aplicados a todos os produtos</p>
        </div>
      </div>

      <div class="admin-content">
        <!-- Progress Steps -->
        <div class="progress-steps">
          <div class="step">
            <div class="step-number completed">1</div>
            <span>Upload</span>
          </div>
          <div class="step">
            <div class="step-number completed">2</div>
            <span>Agrupamento</span>
          </div>
          <div class="step">
            <div class="step-number active">3</div>
            <span>Configurações</span>
          </div>
          <div class="step">
            <div class="step-number">4</div>
            <span>Revisão</span>
          </div>
          <div class="step">
            <div class="step-number">5</div>
            <span>Concluído</span>
          </div>
        </div>

        <!-- Settings Form -->
        <div class="settings-container">
          <form id="settingsForm">
            <div class="form-card">
              <h2>Precificação</h2>
              <div class="form-group">
                <label for="price_cents">Preço Padrão (R$)</label>
                <input 
                  type="number" 
                  id="price_cents" 
                  name="price_cents" 
                  step="0.01" 
                  min="0"
                  placeholder="0,00"
                  value="<%= defaultSettings.price_cents ? (defaultSettings.price_cents / 100).toFixed(2) : '' %>"
                >
                <small>Será aplicado a todos os produtos. Você pode editar individualmente depois.</small>
              </div>
            </div>

            <div class="form-card">
              <h2>Estoque</h2>
              <div class="form-group">
                <label for="stock_quantity">Quantidade em Estoque</label>
                <input 
                  type="number" 
                  id="stock_quantity" 
                  name="stock_quantity" 
                  min="0"
                  placeholder="0"
                  value="<%= defaultSettings.stock_quantity || '' %>"
                >
                <small>Quantidade disponível de cada produto.</small>
              </div>
            </div>

            <div class="form-card">
              <h2>Categorização</h2>
              <div class="form-group">
                <label for="category">Categoria</label>
                <input 
                  type="text" 
                  id="category" 
                  name="category" 
                  placeholder="Ex: Vestidos, Blusas, Calçados..."
                  value="<%= defaultSettings.category || '' %>"
                >
                <small>Categoria para organizar os produtos no catálogo.</small>
              </div>

              <div class="form-group">
                <label for="tags">Tags (separadas por vírgula)</label>
                <input 
                  type="text" 
                  id="tags" 
                  name="tags" 
                  placeholder="Ex: verão, feminino, promoção"
                  value="<%= defaultSettings.tags ? defaultSettings.tags.join(', ') : '' %>"
                >
                <small>Tags para facilitar a busca e filtragem.</small>
              </div>
            </div>

            <div class="preview-card">
              <h3>Aplicar configurações a:</h3>
              <div class="preview-stat">
                <span class="preview-number" id="productCount">0</span>
                <span class="preview-label">produtos</span>
              </div>
            </div>

            <div class="form-actions">
              <button type="button" class="btn btn-secondary" onclick="goBack()">
                Voltar
              </button>
              <button type="submit" class="btn btn-primary btn-lg">
                Aplicar e Continuar para Revisão
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>

  <style>
    .progress-steps {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: var(--color-background);
      border-radius: 8px;
    }
    
    .step {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      flex: 1;
      position: relative;
    }
    
    .step:not(:last-child)::after {
      content: '';
      position: absolute;
      top: 16px;
      left: 50%;
      width: 100%;
      height: 2px;
      background: var(--color-border);
      z-index: -1;
    }
    
    .step-number {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--color-background);
      border: 2px solid var(--color-border);
      font-weight: 600;
      font-size: 0.875rem;
    }
    
    .step-number.completed {
      background: var(--color-success);
      border-color: var(--color-success);
      color: white;
    }
    
    .step-number.active {
      background: var(--color-primary);
      border-color: var(--color-primary);
      color: white;
    }
    
    .step span {
      font-size: 0.875rem;
      color: var(--color-text-secondary);
    }
    
    .settings-container {
      max-width: 800px;
      margin: 0 auto;
    }
    
    .form-card {
      background: var(--color-background);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      padding: 2rem;
      margin-bottom: 1.5rem;
    }
    
    .form-card h2 {
      margin: 0 0 1.5rem 0;
      font-size: 1.25rem;
      font-weight: 600;
    }
    
    .form-group {
      margin-bottom: 1.5rem;
    }
    
    .form-group:last-child {
      margin-bottom: 0;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: var(--color-text);
    }
    
    .form-group input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      font-size: 1rem;
    }
    
    .form-group small {
      display: block;
      margin-top: 0.5rem;
      font-size: 0.875rem;
      color: var(--color-text-secondary);
    }
    
    .preview-card {
      background: linear-gradient(135deg, var(--color-primary), #0052cc);
      color: white;
      border-radius: 8px;
      padding: 2rem;
      text-align: center;
      margin-bottom: 2rem;
    }
    
    .preview-card h3 {
      margin: 0 0 1rem 0;
      font-size: 1rem;
      font-weight: 500;
      opacity: 0.9;
    }
    
    .preview-stat {
      display: flex;
      align-items: baseline;
      justify-content: center;
      gap: 0.5rem;
    }
    
    .preview-number {
      font-size: 3rem;
      font-weight: 700;
    }
    
    .preview-label {
      font-size: 1.25rem;
      opacity: 0.9;
    }
  </style>

  <script>
    const form = document.getElementById('settingsForm');
    const importId = '<%= importData.id %>';
    
    // Carregar contagem de produtos
    fetch(`/dashboard/cadastro-massa/${importId}/revisao`)
      .then(r => r.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        // Simples: buscar na URL se tiver parâmetro ou fazer request à API
        document.getElementById('productCount').textContent = '<%= importData.total_products_generated || 0 %>';
      });
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const settings = {
        price_cents: formData.get('price_cents') ? Math.round(parseFloat(formData.get('price_cents')) * 100) : undefined,
        stock_quantity: formData.get('stock_quantity') ? parseInt(formData.get('stock_quantity')) : undefined,
        category: formData.get('category') || undefined,
        tags: formData.get('tags') || undefined
      };
      
      try {
        const response = await fetch(`/dashboard/cadastro-massa/${importId}/apply-defaults`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(settings)
        });
        
        const result = await response.json();
        
        if (result.success) {
          window.location.href = `/dashboard/cadastro-massa/${importId}/revisao`;
        } else {
          alert('Erro: ' + result.error);
        }
      } catch (error) {
        console.error('Erro ao aplicar configurações:', error);
        alert('Erro ao aplicar configurações');
      }
    });
    
    function goBack() {
      window.location.href = `/dashboard/cadastro-massa/${importId}/agrupamento`;
    }
  </script>
</body>
</html>
